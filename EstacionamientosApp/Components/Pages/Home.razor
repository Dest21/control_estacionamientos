@page "/"
@using EstacionamientosApp.Data
@using EstacionamientosApp.Models
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@rendermode InteractiveServer

<PageTitle>Dashboard - Sistema de Estacionamientos</PageTitle>

<!-- Hero Section -->
<div class="mb-8" data-aos="fade-down">
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-3xl p-8 text-white relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
            <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-white/20 to-transparent"></div>
            <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/10 rounded-full"></div>
            <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-white/10 rounded-full"></div>
        </div>
        
        <div class="relative z-10">
            <div class="grid lg:grid-cols-2 gap-8 items-center">
                <div>
                    <h1 class="text-4xl lg:text-5xl font-bold mb-4 font-poppins">
                        Sistema de
                        <span class="bg-gradient-to-r from-yellow-300 to-orange-300 bg-clip-text text-transparent">
                            Estacionamientos
                        </span>
                    </h1>
                    <p class="text-xl text-white/90 mb-6">
                        Gestión inteligente y moderna de espacios de estacionamiento
                    </p>
                    <div class="flex flex-wrap gap-6">
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center">
                                <i class="bi bi-people-fill text-green-300"></i>
                            </div>
                            <span class="font-semibold">@totalClients Clientes</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center">
                                <i class="bi bi-car-front text-blue-300"></i>
                            </div>
                            <span class="font-semibold">@totalCars Vehículos</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center">
                                <i class="bi bi-grid-3x3-gap text-yellow-300"></i>
                            </div>
                            <span class="font-semibold">@totalSpaces Espacios</span>
                        </div>
                    </div>
                </div>
                <div class="text-center lg:text-right">
                    <div class="inline-block relative">
                        <div class="w-32 h-32 bg-white/20 rounded-3xl flex items-center justify-center backdrop-blur-sm animate-float">
                            <i class="bi bi-car-front-fill text-6xl text-white"></i>
                        </div>
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-green-400 rounded-full animate-pulse"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Clientes Card -->
    <div class="bg-white rounded-2xl p-6 shadow-soft hover:shadow-medium transition-all duration-300 hover:-translate-y-1" data-aos="fade-up" data-aos-delay="100">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                <i class="bi bi-people-fill text-white text-xl"></i>
            </div>
            <div class="text-right">
                <div class="text-2xl font-bold text-gray-900">@totalClients</div>
                <div class="text-sm text-gray-500">Clientes Activos</div>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-1 text-green-600">
                <i class="bi bi-arrow-up text-sm"></i>
                <span class="text-sm font-medium">+12%</span>
            </div>
            <a href="/clients" class="text-blue-600 hover:text-blue-800 text-sm font-medium">Ver todos →</a>
        </div>
    </div>

    <!-- Vehículos Card -->
    <div class="bg-white rounded-2xl p-6 shadow-soft hover:shadow-medium transition-all duration-300 hover:-translate-y-1" data-aos="fade-up" data-aos-delay="200">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-green-600 rounded-xl flex items-center justify-center">
                <i class="bi bi-car-front text-white text-xl"></i>
            </div>
            <div class="text-right">
                <div class="text-2xl font-bold text-gray-900">@totalCars</div>
                <div class="text-sm text-gray-500">Vehículos Registrados</div>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-1 text-green-600">
                <i class="bi bi-arrow-up text-sm"></i>
                <span class="text-sm font-medium">+8%</span>
            </div>
            <a href="/cars" class="text-green-600 hover:text-green-800 text-sm font-medium">Ver todos →</a>
        </div>
    </div>

    <!-- Espacios Card -->
    <div class="bg-white rounded-2xl p-6 shadow-soft hover:shadow-medium transition-all duration-300 hover:-translate-y-1" data-aos="fade-up" data-aos-delay="300">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-xl flex items-center justify-center">
                <i class="bi bi-grid-3x3-gap text-white text-xl"></i>
            </div>
            <div class="text-right">
                <div class="text-2xl font-bold text-gray-900">@occupiedSpaces/@totalSpaces</div>
                <div class="text-sm text-gray-500">Espacios Ocupados</div>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-1 text-orange-600">
                <i class="bi bi-arrow-up text-sm"></i>
                <span class="text-sm font-medium">@occupancyRate.ToString("F1")%</span>
            </div>
            <a href="/parking-spaces" class="text-orange-600 hover:text-orange-800 text-sm font-medium">Ver espacios →</a>
        </div>
    </div>

    <!-- Asignaciones Card -->
    <div class="bg-white rounded-2xl p-6 shadow-soft hover:shadow-medium transition-all duration-300 hover:-translate-y-1" data-aos="fade-up" data-aos-delay="400">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
                <i class="bi bi-clipboard-check text-white text-xl"></i>
            </div>
            <div class="text-right">
                <div class="text-2xl font-bold text-gray-900">@activeAssignments</div>
                <div class="text-sm text-gray-500">Asignaciones Activas</div>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-1 text-green-600">
                <i class="bi bi-arrow-up text-sm"></i>
                <span class="text-sm font-medium">+5%</span>
            </div>
            <a href="/assignments" class="text-purple-600 hover:text-purple-800 text-sm font-medium">Ver asignaciones →</a>
        </div>
    </div>
</div>

<!-- Charts and Analytics -->
<div class="grid lg:grid-cols-3 gap-8 mb-8">
    <!-- Occupancy Chart -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-right">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="bi bi-bar-chart-fill text-indigo-600 mr-2"></i>
                    Ocupación por Zona
                </h3>
                <button class="px-4 py-2 bg-indigo-50 text-indigo-600 rounded-lg hover:bg-indigo-100 transition-colors duration-200 text-sm font-medium">
                    <i class="bi bi-download mr-1"></i> Exportar
                </button>
            </div>
            
            @if (zoneOccupancy?.Any() == true)
            {
                <div class="space-y-4">
                    @foreach (var zone in zoneOccupancy)
                    {
                        <div class="p-4 bg-gray-50 rounded-xl">
                            <div class="flex items-center justify-between mb-3">
                                <div>
                                    <h4 class="font-semibold text-gray-900">@zone.Zone</h4>
                                    <p class="text-sm text-gray-600">@zone.OccupiedSpaces de @zone.TotalSpaces espacios</p>
                                </div>
                                <div class="text-right">
                                    <div class="text-lg font-bold text-gray-900">
                                        @(zone.TotalSpaces > 0 ? (zone.OccupiedSpaces * 100.0 / zone.TotalSpaces).ToString("F1") : "0")%
                                    </div>
                                </div>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-3">
                                <div class="h-3 rounded-full transition-all duration-1000 @GetZoneColorClass(zone.Zone)" 
                                     style="width: @(zone.TotalSpaces > 0 ? (zone.OccupiedSpaces * 100.0 / zone.TotalSpaces).ToString("F1") : "0")%">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <i class="bi bi-bar-chart text-4xl text-gray-300 mb-4"></i>
                    <p class="text-gray-500">No hay datos de ocupación disponibles</p>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="space-y-6">
        <div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-left">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">
                <i class="bi bi-lightning-fill text-yellow-500 mr-2"></i>
                Acciones Rápidas
            </h3>
            
            <div class="space-y-3">
                <a href="/clients" class="flex items-center p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl hover:from-blue-100 hover:to-indigo-100 transition-all duration-300 group">
                    <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                        <i class="bi bi-person-plus text-white"></i>
                    </div>
                    <div class="flex-1">
                        <div class="font-semibold text-gray-900">Nuevo Cliente</div>
                        <div class="text-sm text-gray-600">Registrar cliente</div>
                    </div>
                    <i class="bi bi-arrow-right text-gray-400 group-hover:text-blue-600 group-hover:translate-x-1 transition-all duration-300"></i>
                </a>
                
                <a href="/cars" class="flex items-center p-4 bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl hover:from-green-100 hover:to-emerald-100 transition-all duration-300 group">
                    <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                        <i class="bi bi-car-front-fill text-white"></i>
                    </div>
                    <div class="flex-1">
                        <div class="font-semibold text-gray-900">Registrar Vehículo</div>
                        <div class="text-sm text-gray-600">Agregar nuevo auto</div>
                    </div>
                    <i class="bi bi-arrow-right text-gray-400 group-hover:text-green-600 group-hover:translate-x-1 transition-all duration-300"></i>
                </a>
                
                <a href="/assignments" class="flex items-center p-4 bg-gradient-to-r from-purple-50 to-violet-50 rounded-xl hover:from-purple-100 hover:to-violet-100 transition-all duration-300 group">
                    <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                        <i class="bi bi-clipboard-plus text-white"></i>
                    </div>
                    <div class="flex-1">
                        <div class="font-semibold text-gray-900">Nueva Asignación</div>
                        <div class="text-sm text-gray-600">Asignar espacio</div>
                    </div>
                    <i class="bi bi-arrow-right text-gray-400 group-hover:text-purple-600 group-hover:translate-x-1 transition-all duration-300"></i>
                </a>
                
                <a href="/reports" class="flex items-center p-4 bg-gradient-to-r from-orange-50 to-yellow-50 rounded-xl hover:from-orange-100 hover:to-yellow-100 transition-all duration-300 group">
                    <div class="w-10 h-10 bg-orange-500 rounded-lg flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                        <i class="bi bi-graph-up text-white"></i>
                    </div>
                    <div class="flex-1">
                        <div class="font-semibold text-gray-900">Ver Reportes</div>
                        <div class="text-sm text-gray-600">Análisis y estadísticas</div>
                    </div>
                    <i class="bi bi-arrow-right text-gray-400 group-hover:text-orange-600 group-hover:translate-x-1 transition-all duration-300"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-up">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">
            <i class="bi bi-activity text-indigo-600 mr-2"></i>
            Actividad Reciente
        </h3>
        <button class="px-4 py-2 bg-gray-50 text-gray-600 rounded-lg hover:bg-gray-100 transition-colors duration-200 text-sm font-medium">
            <i class="bi bi-arrow-clockwise mr-1"></i> Actualizar
        </button>
    </div>
    
    @if (recentActivity?.Any() == true)
    {
        <div class="space-y-4">
            @foreach (var activity in recentActivity.Take(5))
            {
                <div class="flex items-start space-x-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-200">
                    <div class="w-10 h-10 bg-@GetActivityColorClass(activity.Status) rounded-lg flex items-center justify-center flex-shrink-0">
                        <i class="bi bi-@GetActivityIcon(activity.Status) text-white text-sm"></i>
                    </div>
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center justify-between mb-1">
                            <h4 class="font-semibold text-gray-900 truncate">@activity.Client?.FullName</h4>
                            <span class="text-sm text-gray-500">@activity.AssignedDate.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <p class="text-sm text-gray-600 mb-2">
                            Vehículo <span class="font-medium">@activity.Car?.LicensePlate</span> asignado al espacio <span class="font-medium">@activity.ParkingSpace?.SpaceNumber</span>
                        </p>
                        <div class="flex items-center space-x-2">
                            <span class="px-2 py-1 bg-@GetActivityColorClass(activity.Status) text-white text-xs rounded-full">@activity.Status</span>
                            <span class="text-xs text-gray-500">• @activity.ParkingSpace?.Zone</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <i class="bi bi-activity text-4xl text-gray-300 mb-4"></i>
            <p class="text-gray-500">No hay actividad reciente</p>
        </div>
    }
</div>

@code {
    private int totalClients;
    private int totalCars;
    private int totalSpaces;
    private int occupiedSpaces;
    private int activeAssignments;
    private double occupancyRate;
    
    private List<ZoneOccupancy>? zoneOccupancy;
    private List<ParkingAssignment>? recentActivity;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadDashboardData();
            StateHasChanged();
        }
    }

    private async Task LoadDashboardData()
    {
        try
        {
            totalClients = await DbContext.Clients.CountAsync(c => c.IsActive);
            totalCars = await DbContext.Cars.CountAsync(c => c.IsActive);
            totalSpaces = await DbContext.ParkingSpaces.CountAsync(ps => ps.IsActive);
            occupiedSpaces = await DbContext.ParkingSpaces.CountAsync(ps => !ps.IsAvailable && ps.IsActive);
            activeAssignments = await DbContext.ParkingAssignments.CountAsync(pa => pa.Status == "Active" && pa.IsActive);
            
            occupancyRate = totalSpaces > 0 ? (occupiedSpaces * 100.0 / totalSpaces) : 0;

            zoneOccupancy = await DbContext.ParkingSpaces
                .Where(ps => ps.IsActive && !string.IsNullOrEmpty(ps.Zone))
                .GroupBy(ps => ps.Zone)
                .Select(g => new ZoneOccupancy
                {
                    Zone = g.Key!,
                    TotalSpaces = g.Count(),
                    OccupiedSpaces = g.Count(ps => !ps.IsAvailable)
                })
                .ToListAsync();

            recentActivity = await DbContext.ParkingAssignments
                .Include(pa => pa.Client)
                .Include(pa => pa.Car)
                .Include(pa => pa.ParkingSpace)
                .OrderByDescending(pa => pa.AssignedDate)
                .Take(10)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            // En caso de error, inicializar con valores por defecto
            totalClients = 0;
            totalCars = 0;
            totalSpaces = 0;
            occupiedSpaces = 0;
            activeAssignments = 0;
            occupancyRate = 0;
            zoneOccupancy = new List<ZoneOccupancy>();
            recentActivity = new List<ParkingAssignment>();
        }
    }

    private string GetZoneColorClass(string zone) => zone switch
    {
        "Zona A" => "bg-gradient-to-r from-blue-500 to-blue-600",
        "Zona B" => "bg-gradient-to-r from-green-500 to-green-600",
        "Zona C" => "bg-gradient-to-r from-yellow-500 to-orange-500",
        "Zona Especial" => "bg-gradient-to-r from-purple-500 to-purple-600",
        _ => "bg-gradient-to-r from-gray-500 to-gray-600"
    };

    private string GetActivityColorClass(string status) => status switch
    {
        "Active" => "green-500",
        "Expired" => "yellow-500",
        "Cancelled" => "red-500",
        _ => "blue-500"
    };

    private string GetActivityIcon(string status) => status switch
    {
        "Active" => "check-circle",
        "Expired" => "exclamation-triangle",
        "Cancelled" => "x-circle",
        _ => "info-circle"
    };

    public class ZoneOccupancy
    {
        public string Zone { get; set; } = "";
        public int TotalSpaces { get; set; }
        public int OccupiedSpaces { get; set; }
    }
}
