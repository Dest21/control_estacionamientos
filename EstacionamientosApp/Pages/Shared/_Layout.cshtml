    <!-- Custom CSS for additional effects -->
    <style>
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        .font-poppins {
            font-family: 'Poppins', sans-serif;
